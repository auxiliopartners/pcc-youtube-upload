{
  "name": "pcc-youtube-upload",
  "version": "1.0.0",
  "description": "Upload a sermon media archive to Youtube",
  "packageManager": "yarn@4.11.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "author": {
    "name": "Tim Chambers",
    "email": "tim@auxilio.partners",
    "url": "https://auxilio.partners"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "xo",
    "lint:fix": "xo --fix"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.16",
    "dotenv": "^17.2.3",
    "nodemon": "^3.1.11",
    "pino-pretty": "^13.1.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "xo": "^1.2.3"
  },
  "dependencies": {
    "@1password/sdk": "^0.3.1",
    "@googleapis/drive": "^8.0.0",
    "@googleapis/youtube": "^20.0.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "google-auth-library": "^9.0.0",
    "ora": "^9.3.0",
    "pino": "^10.1.0"
  },
  "xo": {
    "space": 2,
    "semicolon": false,
    "ignores": [
      "coverage/**",
      "dist/**",
      "logs/**"
    ],
    "rules": {
      "n/prefer-global/process": "off",
      "unicorn/prefer-top-level-await": "off",
      "unicorn/no-process-exit": "off",
      "import-x/no-unassigned-import": [
        "error",
        {
          "allow": [
            "dotenv/config"
          ]
        }
      ]
    }
  }
}
